                        android:layout_height="30dp"
                        android:stretchColumns="*"
                        android:padding="3dip"
                        android:layout_marginTop="10dp">
                        <RelativeLayout
                            android:background="@drawable/uncheck_bg"
                            android:id="@+id/bai_0"
                            android:layout_weight="1">

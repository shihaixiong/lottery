<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basecolor"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/tzLinearLayout"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:id="@+id/btn_TZ"
                android:background="@color/timeselect"
                android:gravity="center"
                android:text="下注"
                android:textSize="15sp" />
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_rest"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="重置"
                android:textSize="15sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dip">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:id="@+id/textstr"
                    android:layout_gravity="center_horizontal"
                    android:text="已经选中"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/textstr"
                    android:textColor="@color/drop_down_selected"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:id="@+id/selectNumber"
                    android:text="0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/selectNumber"
                    android:layout_gravity="center_horizontal"
                    android:text="注"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </RelativeLayout>

                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="第三球"
                                android:textColor="@color/black1"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                        </LinearLayout>
                    </TableRow>
                    <View style="@style/PersonalLine" />

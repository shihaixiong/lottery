<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/PersonalMainLayoutStyle"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip">
            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/statusTitle"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:text="状态："
                android:textSize="15sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/statusTitle"
                android:layout_centerVertical="true"
                android:text="已处理"
                android:textSize="15sp"
                android:textColor="@color/cp_bg"
                android:gravity="center" />
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/castTitle"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:text="金额(¥)："
                android:textSize="15sp"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:layout_centerInParent="true"
                android:id="@+id/castPay"
                android:textColor="@color/menu_presses"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/castTitle"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:text="渠道："
                android:layout_centerVertical="true"
                android:id="@+id/paywayTitle"
                android:layout_toLeftOf="@+id/payway"
                android:textSize="15sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/payway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/cp_classfy"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_margin="10dip"
            android:layout_height="1px" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/relativelayout"
            android:id="@+id/relativelayout2"
            android:layout_height="wrap_content">
            <TextView
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:id="@+id/caozuoTimeTitle"
            android:text="操作时间："
            android:textSize="12sp"
            android:gravity="center" />
            <TextView
                android:id="@+id/cztime"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/caozuoTimeTitle"
                android:layout_height="wrap_content"
                android:text="2016-7-12"
                android:textSize="12sp"
                android:textColor="#408aff"
                android:gravity="center"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/relativelayout2"
            android:id="@+id/relativelayout3"
            android:layout_marginBottom="5dip"
            android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:id="@+id/beizTitle"
                android:layout_marginTop="5dp"
                android:text="备注："
                android:textSize="12sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/beizhu"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/beizTitle"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="#408aff"
                android:gravity="center"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:background="@color/menu_bg">
    <LinearLayout
        android:id="@+id/lyr_home"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:drawableLeft="@drawable/ico_homehl"
            android:layout_gravity="center_vertical"
            android:textColor="@color/menu_presses"
            android:textSize="15sp"
            android:layout_weight="1"
            android:id="@+id/txthome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ico_win"
            android:textColor="@color/menu_normal"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/txtWin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ico_myaccount"
            android:textColor="@color/menu_normal"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/txtAccount" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<include-->
        <!--android:id="@+id/title_bar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--layout="@layout/title_bar" />-->
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/btn_cp_normal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="SecondActivity"
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_bar"
        android:background="@drawable/bg"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/cp_bg"
            android:layout_height="80dip">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/nextqs"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/cp_default"
                android:textSize="15sp"
                android:text="距20160705013期封盘"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/jieztime"
                android:layout_marginLeft="10dip"
                android:layout_below="@+id/nextqs"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_hour_decade"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_hour_decade"
                    android:id="@+id/tv_hour_unit"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_hour_unit"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:id="@+id/txthour"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:text=":"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_min_decade"
                    android:layout_toRightOf="@+id/txthour"
                    android:textColor="@color/white"
                    android:text="0"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="30sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/tv_min_decade"
                    android:id="@+id/tv_min_unit"
                    android:textColor="@color/white"
                    android:text="0"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="30sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_min_unit"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/txtfen"
                    android:text=":"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/txtfen"
                    android:id="@+id/tv_sec_decade"
                    android:textColor="@color/white"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_sec_decade"
                    android:id="@+id/tv_sec_unit"
                    android:textColor="@color/white"
                    android:text="0"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/fengpStr"
                android:visibility="gone"
                android:layout_below="@+id/nextqs"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/fengbtime"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cp_win"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:text="已封盘"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>
            <View style="@style/PersonaVlLine"
                android:id="@+id/line"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/rl"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/line"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dip"
                android:textColor="@color/cp_default"
                android:text="20160705013期"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_marginBottom="5dip"
                android:id="@+id/previousStageName"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/previousStageName"
                android:id="@+id/ll_openNumber"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/txt_wan"
                    android:gravity="center"
                    android:textColor="@color/cp_win"
                    android:textSize="18sp"
                    android:background="@drawable/progress"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/txt_qian"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/cp_win"
                    android:textSize="18sp"
                    android:background="@drawable/progress"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/txt_bai"
                    android:textColor="@color/cp_win"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:background="@drawable/progress"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:gravity="center"
                    android:id="@+id/txt_shi"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/cp_win"
                    android:textSize="18sp"
                    android:background="@drawable/progress"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/txt_ge"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/cp_win"
                    android:textSize="18sp"
                    android:background="@drawable/progress"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/ll_openNumber"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26"
                    android:id="@+id/txt_sum"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大"
                    android:id="@+id/txt_ds"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="双"
                    android:id="@+id/txt_dx"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="龙"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:id="@+id/txt_lh"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dip">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/cp_default"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:id="@+id/tv_desc"
                android:textSize="15sp"
                android:text="今日输赢:"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/cp_win"
                android:layout_centerVertical="true"
                android:id="@+id/winStatus"
                android:layout_toRightOf="@+id/tv_desc"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="0.00"/>
        </RelativeLayout>
        <View style="@style/PersonalLine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="wrap_content"
            android:fillViewport="true"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_lm"
            android:background="@null"
            android:textColor="@color/white"
            android:text="两面盘"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_one"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第一球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_two"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第二球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_three"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第三球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_four"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第四球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_fine"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第五球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_qzh"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="前中后"/>
    </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/toolbar"
        layout="@layout/buttom_bar"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent" />
</RelativeLayout>
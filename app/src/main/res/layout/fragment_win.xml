<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/open_stage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bartool"
        android:id="@+id/scrollView" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/bartool">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:background="@color/menu_presses"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/cp_classfy"
                        android:drawablePadding="10dp"
                        android:text="重庆时时彩"
                        android:drawableLeft="@drawable/dotted_line_gray"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txt_more_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/cp_default"
                        android:visibility="gone"
                        android:text="更多..."
                        android:layout_marginRight="10dp"
                        android:textSize="12dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.maxsix.bingo.pulltorefresh.PullToRefreshLayout
                        android:layout_width="match_parent"
                        android:id="@+id/swip_ssc"
                        android:layout_height="match_parent">
                        <ListView
                            android:layout_width="match_parent"
                            android:background="@null"
                            android:id="@+id/lv_ssc"
                            android:dividerHeight="0dip"
                            android:divider="#00000000"
                            android:layout_height="match_parent">
                        </ListView>
                    </com.maxsix.bingo.pulltorefresh.PullToRefreshLayout>
                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:id="@+id/sscProgressBar"
                        style="?android:attr/progressBarStyleInverse"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:visibility="visible">
                    </android.support.v4.widget.ContentLoadingProgressBar>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/bartool">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:background="@color/menu_presses"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/cp_classfy"
                        android:text="北京赛车(PK10)"
                        android:drawableLeft="@drawable/dotted_line_gray"
                        android:drawablePadding="10dp"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txt_more_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/cp_default"
                        android:text="更多..."
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.maxsix.bingo.pulltorefresh.PullToRefreshLayout
                        android:layout_width="match_parent"
                        android:id="@+id/swip_bj"
                        android:layout_height="match_parent">
                        <ListView
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:id="@+id/lv_bj"
                            android:dividerHeight="0dip"
                            android:divider="#00000000"
                            android:layout_height="match_parent">
                        </ListView>
                    </com.maxsix.bingo.pulltorefresh.PullToRefreshLayout>
                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:id="@+id/bjProgressBar"
                        style="?android:attr/progressBarStyleInverse"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:visibility="visible">
                    </android.support.v4.widget.ContentLoadingProgressBar>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/bartool">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:background="@color/menu_presses"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/cp_classfy"
                        android:text="江苏骰宝(快3)"
                        android:drawableLeft="@drawable/dotted_line_gray"
                        android:drawablePadding="10dp"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/txt_more_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/cp_default"
                        android:text="更多..."
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/searchView"
                    android:layout_height="match_parent">
                    <com.maxsix.bingo.pulltorefresh.PullToRefreshLayout
                        android:layout_width="match_parent"
                        android:id="@+id/swip_js"
                        android:layout_height="match_parent">
                        <ListView
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:dividerHeight="0dip"
                            android:divider="#00000000"
                            android:id="@+id/lv_js"
                            android:layout_height="match_parent">
                        </ListView>
                    </com.maxsix.bingo.pulltorefresh.PullToRefreshLayout>
                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:id="@+id/jsProgressBar"
                        style="?android:attr/progressBarStyleInverse"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:visibility="visible">
                    </android.support.v4.widget.ContentLoadingProgressBar>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/bartool">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:background="@color/menu_presses"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/cp_classfy"
                        android:text="广东快乐十分"
                        android:drawableLeft="@drawable/dotted_line_gray"
                        android:drawablePadding="10dp"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/cp_default"
                        android:text="更多..."
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/searchView"
                    android:layout_height="match_parent">
                    <com.maxsix.bingo.pulltorefresh.PullToRefreshLayout
                        android:layout_width="match_parent"
                        android:id="@+id/swip_gd"
                        android:layout_height="match_parent">
                        <ListView
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:id="@+id/lv_gd"
                            android:dividerHeight="0dip"
                            android:divider="#00000000"
                            android:layout_height="match_parent">
                        </ListView>
                    </com.maxsix.bingo.pulltorefresh.PullToRefreshLayout>
                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:id="@+id/gdProgressBar"
                        style="?android:attr/progressBarStyleInverse"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:visibility="visible">
                    </android.support.v4.widget.ContentLoadingProgressBar>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/bartool">
                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:background="@color/menu_presses"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/cp_classfy"
                        android:text="香港六合彩"
                        android:drawableLeft="@drawable/dotted_line_gray"
                        android:drawablePadding="10dp"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/cp_default"
                        android:text="更多..."
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/searchView"
                    android:layout_height="match_parent">
                    <com.maxsix.bingo.pulltorefresh.PullToRefreshLayout
                        android:layout_width="match_parent"
                        android:id="@+id/swip_marsix"
                        android:layout_height="match_parent">
                        <ListView
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            android:id="@+id/lv_marsix"
                            android:dividerHeight="0dip"
                            android:divider="#00000000"
                            android:layout_height="match_parent">
                        </ListView>
                    </com.maxsix.bingo.pulltorefresh.PullToRefreshLayout>
                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:id="@+id/marsixProgressBar"
                        style="?android:attr/progressBarStyleInverse"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:visibility="visible">
                    </android.support.v4.widget.ContentLoadingProgressBar>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>


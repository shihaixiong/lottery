<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<include-->
        <!--android:id="@+id/title_bar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--layout="@layout/title_bar" />-->
    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/btn_cp_normal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="SecondActivity"
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:layout_below="@+id/title_bar"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/cp_bg"
            android:layout_height="80dip">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rl"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="距2017070659期封盘"
                    android:gravity="center"
                    android:layout_marginLeft="5dip"
                    android:textSize="15sp"
                    android:id="@+id/nextqs"
                    android:textColor="@color/cp_default"
                    android:layout_marginTop="10dip"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/jieztime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dip"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hour_decade"
                        android:visibility="gone"
                        android:textColor="@color/red"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_hour_decade"
                        android:id="@+id/tv_hour_unit"
                        android:visibility="gone"
                        android:textColor="@color/red"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_hour_unit"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:id="@+id/txthour"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:text=":"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_min_decade"
                        android:layout_toRightOf="@+id/txthour"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="30sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_min_decade"
                        android:id="@+id/tv_min_unit"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="30sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_min_unit"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:id="@+id/txtfen"
                        android:layout_centerVertical="true"
                        android:text=":"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/txtfen"
                        android:id="@+id/tv_sec_decade"
                        android:textColor="@color/white"
                        android:text="0"
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_sec_decade"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_sec_unit"
                        android:textColor="@color/white"
                        android:text="0"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/fengpStr"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/nextqs"
                    android:layout_centerHorizontal="true"
                     android:visibility="gone"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cp_win"
                        android:layout_centerVertical="true"
                        android:text="已封盘"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/openStr"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/fengbtime"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:layout_centerVertical="true"
                        android:text="待开奖"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>
            <View style="@style/PersonaVlLine"
                android:layout_marginLeft="5dip"
                android:id="@+id/line"
                android:layout_toRightOf="@+id/rl"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/line"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dip"
                    android:textColor="@color/cp_default"
                    android:text="20160705013期"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dip"
                    android:id="@+id/previousStageName"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/previousStageName"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dip"
                    android:layout_marginBottom="3dip"
                    android:gravity="center"
                    android:id="@+id/ll_openNumber"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05"
                        android:textColor="@color/cp_win"
                        android:id="@+id/txt_1"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:background="@drawable/hlprogress"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:id="@+id/txt_2"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/cp_win"
                        android:textSize="15sp"
                        android:background="@drawable/hlprogress"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/cp_win"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:id="@+id/txt_3"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:textSize="15sp"
                        android:background="@drawable/hlprogress"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cp_win"
                        android:text="06"
                        android:gravity="center"
                        android:id="@+id/txt_4"
                        android:layout_marginLeft="3dp"
                        android:textSize="15sp"
                        android:background="@drawable/hlprogress"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cp_win"
                        android:text="04"
                        android:id="@+id/txt_5"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:textSize="15sp"
                        android:background="@drawable/hlprogress"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cp_win"
                        android:text="15"
                        android:id="@+id/txt_6"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:textSize="15sp"
                        android:background="@drawable/hlprogress"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09"
                        android:id="@+id/txt_7"
                        android:gravity="center"
                        android:textColor="@color/cp_win"
                        android:layout_marginLeft="3dp"
                        android:textSize="15sp"
                        android:background="@drawable/hlprogress"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/cp_win"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:id="@+id/txt_8"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:textSize="15sp"
                        android:background="@drawable/hlprogress"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/cp_default"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:id="@+id/tv_winstatus"
                android:textSize="15sp"
                android:text="今日输赢:"/>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_winstatus"
                android:textColor="@color/cp_win"
                android:id="@+id/winStatus"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="0.00"/>
        </RelativeLayout>
        <View style="@style/PersonalLine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ScrollView
            android:layout_width="wrap_content"
            android:fillViewport="true"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_lm"
            android:background="@null"
            android:textColor="@color/white"
            android:text="两面盘"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_one"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第一球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_two"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第二球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_three"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第三球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_four"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第四球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_fine"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第五球"/>
            <View style="@style/PersonalLine" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_six"
            android:background="@color/cp_bg"
            android:textColor="@color/cp_default"
            android:textSize="15sp"
            android:text="第六球"/>
            <View style="@style/PersonalLine" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_seven"
                android:background="@color/cp_bg"
                android:textColor="@color/cp_default"
                android:textSize="15sp"
                android:text="第七球"/>
            <View style="@style/PersonalLine" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_eight"
                android:background="@color/cp_bg"
                android:textColor="@color/cp_default"
                android:textSize="15sp"
                android:text="第八球"/>
    </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>
    <include
        android:id="@+id/toolbar"
        layout="@layout/buttom_bar"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent" />
</RelativeLayout>
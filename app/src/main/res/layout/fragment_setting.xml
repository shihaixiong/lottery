<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maxsix.bingo.view.fragment.SettingFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <com.maxsix.bingo.widget.ImageViewWithCache
                android:id="@+id/avatar"
                android:layout_height="60dp"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="20dp"
                android:layout_width="60dp"
                android:layout_centerVertical="true"
                android:src="@drawable/user_not_login_avatar" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/avatar"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:id="@+id/txt_login"
                android:layout_marginLeft="10dip"
                android:text="登录/注册"
                android:textColor="@color/gray"
                android:textSize="18sp"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_paylist"
                    style="@style/TxtTitle"
                    android:drawableLeft="@drawable/ico_money"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_item_selector"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/right"
                    android:text="账单管理" />
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />
                <TextView
                    android:id="@+id/txt_zijin"
                    style="@style/TxtTitle"
                    android:drawableLeft="@drawable/ico_money"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_item_selector"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/right"
                    android:text="资金管理" />
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />

                <TextView
                    android:id="@+id/txt_ali"
                    style="@style/TxtTitle"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_item_selector"
                    android:layout_width="fill_parent"
                    android:drawableLeft="@drawable/ico_card"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/right"
                    android:text="银行卡账号" />
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />
                <TextView
                    android:id="@+id/txt_wx"
                    style="@style/TxtTitle"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_item_selector"
                    android:layout_width="fill_parent"
                    android:drawableLeft="@drawable/ico_alipay_account"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/right"
                    android:text="支付宝账号" />
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />
                <TextView
                    android:id="@+id/txt_invitecode"
                    style="@style/TxtTitle"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_item_selector"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawableLeft="@drawable/ico_invitation_code"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/right"
                    android:text="邀请码" />
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />
                <TextView
                    android:id="@+id/txt_realName"
                    style="@style/TxtTitle"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_item_selector"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ico_name"
                    android:drawableRight="@drawable/right"
                    android:text="真实姓名" />
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />
                <TextView
                    android:id="@+id/txt_modifyPassword"
                    style="@style/TxtTitle"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_item_selector"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ico_password"
                    android:drawableRight="@drawable/right"
                    android:text="账户密码" />
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />
                <TextView
                    android:id="@+id/txt_lock"
                    style="@style/TxtTitle"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_item_selector"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/right"
                    android:drawableLeft="@drawable/ico_gesture_pattern"
                    android:text="手势图案" />
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rl_phone"
                    android:background="@drawable/setting_item_selector"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TxtTitle"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:id="@+id/tv_phone"
                        android:paddingRight="16dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="15dp"
                        android:drawableLeft="@drawable/ico_phone_number"
                        android:text="绑定手机号" />
                    <TextView
                        android:id="@+id/txt_phone"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/right"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_marginTop="20dp"
                        android:text=""
                        android:drawablePadding="10dp" />
                </RelativeLayout>
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />
                <TextView
                    android:id="@+id/txt_service"
                    style="@style/TxtTitle"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@drawable/setting_item_selector"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="15dp"
                    android:drawableRight="@drawable/right"
                    android:drawableLeft="@drawable/user_not_login_avatar"
                    android:text="客服" />
                <View
                    android:background="@color/black2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/setting_item_selector"
                    android:layout_marginBottom="30dip"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TxtTitle"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:id="@+id/tx_version"
                        android:paddingRight="10dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="15dp"
                        android:drawableLeft="@drawable/ico_edition"
                        android:text="版本" />
                    <TextView
                        android:id="@+id/txt_version"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_marginTop="20dp"
                        android:drawablePadding="10dp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dip"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>

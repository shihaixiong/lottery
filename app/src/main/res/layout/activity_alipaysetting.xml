<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/menu_presses"
        android:gravity="center_vertical">

        <include layout="@layout/ease_commom_back_btn" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityTitle"
            android:layout_centerInParent="true"
            android:text="银行卡账号绑定/修改"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout style="@style/PersonalMainLayoutStyle">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10sp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff3b3b3b"
                android:textSize="15.0sp"
                android:text="绑定的银行卡账号必须和设置的真实姓名名下的银行卡卡，不然无法提现成功"/>
        </LinearLayout>
        <View style="@style/PersonalLine" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff3b3b3b"
                android:id="@+id/tv_bankType"
                android:textSize="15.0sp"
                android:text="银行开户行："/>
            <Spinner
                android:id="@+id/bankType"
                android:layout_toRightOf="@+id/tv_bankType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:text=""
                android:focusableInTouchMode="true"
                android:padding="5.0dip"
                android:textColor="#ff3b3b3b"
                android:textSize="20.0sp">
            </Spinner>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff3b3b3b"
                android:id="@+id/tv_infoTitle"
                android:textSize="15.0sp"
                android:text="银行卡卡号："/>
            <EditText
                android:id="@+id/alipayAccount"
                android:layout_toRightOf="@+id/tv_infoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:padding="5.0dip"
                android:textColor="#ff3b3b3b"
                android:textSize="20.0sp">
            </EditText>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg_green"
            android:id="@+id/btnModifyAliAccount"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="修改"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
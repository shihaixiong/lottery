<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        style="@style/PersonalMainLayoutStyle"
        android:layout_marginBottom="2.5dip"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sscNumber"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:gravity="center" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dip"
            android:layout_below="@+id/relativelayout"
            android:id="@+id/ll_openNumber"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_wan"
                android:textColor="@color/cp_win"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/progress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_qian"
                android:layout_marginLeft="10dp"
                android:textColor="@color/cp_win"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/progress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_bai"
                android:layout_marginLeft="10dp"
                android:textColor="@color/cp_win"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/progress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/txt_shi"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="@color/cp_win"
                android:textSize="15sp"
                android:background="@drawable/progress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_ge"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/cp_win"
                android:textSize="15sp"
                android:background="@drawable/progress"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/relativelayout"
            android:layout_toRightOf="@+id/ll_openNumber">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_sum"
                android:textColor="@color/btn_blue_pressed"
                android:gravity="center"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txt_ds"
                android:textColor="@color/btn_blue_pressed"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/txt_dx"
                android:textColor="@color/btn_blue_pressed"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/btn_blue_pressed"
                android:id="@+id/txt_lh"
                android:layout_marginLeft="15dp"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
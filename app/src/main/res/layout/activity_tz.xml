<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black2">
        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="#00acff"
            android:gravity="center_vertical">

        <include layout="@layout/ease_commom_back_btn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="托管资金"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="35dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_orderCaseLabel"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:text="订单金额:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/tv_orderCaseLabel"
        android:layout_marginTop="10dp"
        android:id="@+id/sumCast"
        android:text="¥100.00"
        android:textColor="@color/drop_down_selected"
        android:textSize="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_sumCastLabel"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="托管总金额"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tv_sumCastLabel"
            android:textSize="15sp"
            android:text="选择支付方式"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/txt_weixin"
            style="@style/TxtTitle"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/weixinpay"
            android:drawableRight="@drawable/right"
            android:text="微信" />

    <View
        android:background="@color/black2"
        android:layout_width="fill_parent"
        android:layout_height="1px" />
        <TextView
            android:id="@+id/txt_alipay"
            style="@style/TxtTitle"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:background="@drawable/setting_item_selector"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/alipaylogo"
            android:drawableRight="@drawable/right"
            android:text="支付宝" />
    <View
        android:background="@color/black2"
        android:layout_width="fill_parent"
        android:layout_height="1px" />
    <TextView
        android:id="@+id/txt_xunhai"
        style="@style/TxtTitle"
        android:textSize="12sp"
        android:gravity="center_vertical"
        android:background="@drawable/setting_item_selector"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/right"
        android:text="账户余额" />
    </LinearLayout>
    <com.maxsix.bingo.circleprogress.DonutProgress
        android:id="@+id/donut_progress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        custom:donut_unfinished_stroke_width="2dp"
        custom:donut_finished_stroke_width="2dp"
        app:donut_unfinished_color="@color/btn_logout_normal"
        custom:donut_finished_color="@color/btn_login_normal"
        custom:donut_progress="0"
        custom:donut_text_size="12dp"
        custom:donut_text="支付成功，正在投注……"
        custom:donut_text_color="@color/bar_color"
        custom:donut_inner_bottom_text_size="10dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        custom:donut_inner_bottom_text_color="@color/drop_down_selected"/>
</RelativeLayout>
